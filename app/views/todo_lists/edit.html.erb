<% content_for :title, "Edit #{@todo_list.name}" %>

<div class="max-w-2xl mx-auto p-6 bg-white rounded-lg shadow-lg my-10">
  <div class="mb-6">
    <h1 class="font-bold text-3xl text-gray-800">Edit Todo List</h1>
    <%= link_to "â† Back to list", todo_list_path(@todo_list), class: "text-blue-600 hover:text-blue-800 text-sm" %>
  </div>

  <%= form_with(model: @todo_list, class: "space-y-6") do |form| %>
    <% if @todo_list.errors.any? %>
      <div class="bg-red-50 p-4 rounded-md mb-6">
        <div class="text-red-700 font-medium">
          <%= pluralize(@todo_list.errors.count, "error") %> prohibited this todo list from being saved:
        </div>
        <ul class="list-disc ml-5 text-red-600">
          <% @todo_list.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :name, class: "block text-sm font-medium leading-6 text-gray-900" %>
      <%= form.text_field :name, class: "block w-full rounded-md border-0 py-2 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6", required: true %>
    </div>

    <div class="flex justify-end gap-3">
      <%= link_to "Cancel", todo_list_path(@todo_list), class: "rounded-md px-3.5 py-2 bg-gray-100 hover:bg-gray-200 text-gray-800 font-medium" %>
      <%= form.submit "Update List", class: "rounded-md px-3.5 py-2 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
    </div>
  <% end %>
</div>
